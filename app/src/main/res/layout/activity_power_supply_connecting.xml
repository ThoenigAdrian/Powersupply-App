<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="advancedtech.nglabornetzgeraet.PowerSupply">

    <Button
        android:id="@+id/decrease_voltage_channel_1"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:text="-"
        app:layout_constraintTop_toTopOf="@+id/increase_voltage_channel_1"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/increase_voltage_channel_1"  />

    <Button
        android:id="@+id/increase_voltage_channel_1"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@+id/voltage_channel_1"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/channel_1_heading" />

    <Button
        android:id="@+id/connectionStatus"
        android:layout_width="133dp"
        android:layout_height="36dp"
        android:background="@drawable/colored_unclickable_button"
        android:text="@string/connecting_str"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textAllCaps="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/channel_2_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/channel_2"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginEnd="55dp"
        app:layout_constraintTop_toTopOf="@+id/channel_1_heading"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/channel_1_heading"
        android:layout_marginStart="128dp" />

    <TextView
        android:id="@+id/channel_1_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/channel_1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="43dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/connectionStatus" />

    <TextView
        android:id="@+id/current_channel_2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/textbox_with_borders"
        android:text="@string/example_current_channel_2"
        app:layout_constraintTop_toTopOf="@+id/current_channel_1"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/current_channel_1"
        android:layout_marginStart="128dp" />

    <TextView
        android:id="@+id/current_channel_1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textbox_with_borders"
        android:text="@string/example_current_channel_1"
        app:layout_constraintLeft_toLeftOf="@+id/voltage_channel_1"
        app:layout_constraintTop_toBottomOf="@+id/voltage_channel_1" />

    <TextView
        android:id="@+id/voltage_channel_1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/textbox_with_borders"
        android:text="@string/example_voltage_channel_1"
        app:layout_constraintBottom_toBottomOf="@+id/increase_current_channel_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/current_channel_1"
        app:layout_constraintTop_toBottomOf="@+id/channel_1_heading"
        app:layout_constraintVertical_bias="0.187"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/voltage_channel_2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="@string/example_voltage_channel_2"
        android:background="@drawable/textbox_with_borders"
        android:layout_marginStart="128dp"
        app:layout_constraintTop_toTopOf="@+id/voltage_channel_1"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/voltage_channel_1"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/decrease_current_channel_1"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:text="-"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/decrease_voltage_channel_1"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/decrease_voltage_channel_1" />

    <Button
        android:id="@+id/decrease_current_channel_2"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@+id/increase_current_channel_2"
        app:layout_constraintTop_toTopOf="@+id/decrease_current_channel_1"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/decrease_voltage_channel_2"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@+id/increase_voltage_channel_2"
        app:layout_constraintTop_toTopOf="@+id/decrease_voltage_channel_1" />

    <Button
        android:id="@+id/increase_voltage_channel_2"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="+"
        app:layout_constraintTop_toTopOf="@+id/increase_voltage_channel_1"
        app:layout_constraintLeft_toRightOf="@+id/voltage_channel_2"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/increase_current_channel_2"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="+"
        app:layout_constraintTop_toTopOf="@+id/increase_current_channel_1"
        app:layout_constraintLeft_toRightOf="@+id/current_channel_2"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/increase_current_channel_1"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:text="+"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/increase_voltage_channel_1"
        app:layout_constraintLeft_toLeftOf="@+id/increase_voltage_channel_1" />

    <EditText
        android:id="@+id/live_data_content_channel1"
        android:layout_width="140dp"
        android:layout_height="83dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/textbox_with_borders"
        android:ems="10"
        android:focusable="false"
        android:inputType="textMultiLine"
        android:text="@string/live_data_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/current_channel_1"
        app:layout_constraintTop_toBottomOf="@+id/current_channel_1" />

    <EditText
        android:id="@+id/live_data_content_channel2"
        android:layout_width="140dp"
        android:layout_height="83dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/textbox_with_borders"
        android:ems="10"
        android:focusable="false"
        android:inputType="textMultiLine"
        android:text="@string/live_data_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/current_channel_2"
        app:layout_constraintTop_toBottomOf="@+id/current_channel_2" />




</android.support.constraint.ConstraintLayout>
